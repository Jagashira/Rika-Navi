{
  "manifest_version": 3,
  "name": "Rika Navi",
  "version": "1.0.0",
  "description": "東京理科大学LETUSの課題を見逃さない！締切が迫った課題を自動で通知し、一目で確認できるChrome拡張機能。",
  "icons": {
    "16": "icons/icon_16.png",
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "permissions": ["storage", "webNavigation", "offscreen", "identity"],
  "host_permissions": [
    "https://letus.ed.tus.ac.jp/*",
    "https://idp.admin.tus.ac.jp/*"
  ],
  "background": {
    "service_worker": "src/background.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://letus.ed.tus.ac.jp/my/"],
      "js": ["src/content_script.ts"]
    }
  ],
  "action": {
    "default_popup": "index.html"
  },
  "web_accessible_resources": [
    {
      "resources": ["assets/content_script.ts-*.js"],
      "matches": ["https://letus.ed.tus.ac.jp/*"]
    }
  ],
  "oauth2": {
    "scopes": [
      "https://www.googleapis.com/auth/userinfo.email",
      "https://www.googleapis.com/auth/userinfo.profile"
    ]
  }
}
